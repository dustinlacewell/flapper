{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["ES2020"],
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": ".",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "ES2020",
        "plugins": [
            {
                "transform": "ts-auto-mock/transformer",
                "cacheBetweenTests": false
            }
        ],
        "baseUrl": ".",
        "paths": {
            "@utils": ["src/utils"],
            "@procs": ["src/procs"],
            "@types": ["src/types"]
        }
    },
    "include": ["src/**/*", "gatsby-node.ts", "index.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
