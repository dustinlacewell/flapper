{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "jsx": "react",
        "moduleResolution": "node",
        "outDir": ".",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "es6",
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@utils": ["src/utils"],
            "@procs": ["src/procs"],
            "@types": ["src/types"]
        }
    },
    "include": ["src/**/*", "gatsby-node.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
